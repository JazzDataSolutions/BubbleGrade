# Environment Variables Example for Local Development
# Copy this file to .env and adjust values as needed

# Database Configuration
DATABASE_URL=postgresql+asyncpg://bubblegrade:your_password@localhost:5432/bubblegrade

# Microservice URLs
OMR_URL=http://localhost:8090
OCR_URL=http://localhost:8100
# Frontend API base URL
VITE_API_BASE=http://localhost:8080/api

# Security
SECRET_KEY=your_secure_secret_key
ALLOWED_ORIGINS=http://localhost:5173

# Processing Configuration
OCR_CONFIDENCE_THRESHOLD=0.8
CURP_VALIDATION_STRICT=true
MAX_PROCESSING_TIME=60

# Performance
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
RATE_LIMIT_PER_MINUTE=30